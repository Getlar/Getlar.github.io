---
interface Props {
  color: string;
}

const { color,} = Astro.props;

---
<style define:vars={{ color: color }}>
  .title-card {
    display: grid;
    grid-template-rows: auto 1fr auto; /* Create three rows: auto for title, 1fr for spacing, auto for subtitle */
    align-items: center;
    height: 300px; /* Adjust height as needed */
    /* ... other styles from the original component */
  }

  .title {
    font-size: 3rem;
    font-weight: bold;
    text-align: center; /* Center the title */
  }

  .subtitle {
    font-size: 1.5rem;
    opacity: 0.8;
    text-align: center; /* Center the subtitle */
  }
</style>

<div class="title-card">
  <slot />
</div>

