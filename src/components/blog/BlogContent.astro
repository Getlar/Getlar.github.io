---
interface Props {
  content: any;
}

const { content } = Astro.props;
---

<article class='prose-slate w-sm md:w-prose md:prose poppins'>
  <a href='/blog/' title='Back to posts' class="hover:text-tcotta transition-all duration-150 ease-in-out text-dark poppins">&larr; Back to posts</a>
  <p class='text-slate text-sm md:text-base'>
    Published on: {content.pubDate} by {content.author}
  </p>
  <p class='text-slate text-sm md:text-base'>
    Last Modified on: {content.lastModDate}
  </p>
  <slot />
  <p class='text-slate'>Written by {content.author}</p>
  <a href='/blog/' title='Back to posts' class="hover:text-tcotta transition-all duration-150 ease-in-out text-dark poppins">&larr; Back to posts</a>
</article>
